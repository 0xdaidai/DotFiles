#!/bin/zsh
if [ -z "$1" ] ;then
	echo -e "\e[31mError:No parameters found!\e[m"
	exit 1
fi
name=it
if [ -n "$2" ] ;then
	declare name=them
fi
read -q "?Do you want to remove $name?[y/n]"  bool
if [ $? = "0" ] ;then
	declare size=$(du -s $* | awk '{size+=$1} END{print size}')
	if [ $size -gt 200000 ] ;then
		echo
		read -q "?The files are bigger than 200M.Do you want to really remove $name" bool
		if [ $? = "0" ] ;then
			/bin/rm -fr $@
		else
			mv -i $@ /trash
			echo -e "\nYou can recover $name from /trash"
		fi
	fi
fi
